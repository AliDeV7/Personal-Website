@{
    Layout = null;
}
<!-- Imagehover -->
<link rel="stylesheet" type="text/css" href="~/lib/imagehover.css/css/imagehover.css" />

<!-- About -->
<div class="pb-3">
    <h1 class="title title--h1 title__separate">@Resources.Lable.Projects</h1>
</div>

<!-- Filter -->
<div class="select">
    <span class="placeholder">انتخاب دسته بندی</span>
    <ul class="filter">
        <li class="filter__item">Category</li>
        <li class="filter__item active" data-filter="*"><a class="filter__link active" href="#filter">همه</a></li>
        <li class="filter__item" data-filter=".category-design"><a class="filter__link" href="#filter">طراحی وب</a></li>
        <li class="filter__item" data-filter=".category-applications"><a class="filter__link" href="#filter">نرم افزار</a></li>
        <li class="filter__item" data-filter=".category-web-development"><a class="filter__link" href="#filter">توسعه وب</a></li>
    </ul>
    <input type="hidden" name="changemetoo" />
</div>

